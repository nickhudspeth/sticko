{{! The big featured header on the homepage, with the site logo and description }}

{{#foreach posts}}
<article class="post">
    <header class="post-header">
        <h1><a href="{{url}}" title="Read &quot;{{title}}&quot;">{{title}}</a></h1>
        
        <!-- Post meta -->
        {{> post-meta}}
    </header>
    <div class="post-content">
	{{#if image}}
	<style>
	.post-cover-image{
	position: relative;
	width:100%;
	height:200px;
	transform:translateY(-10%);
	overflow:hidden;
	}
	.post-cover-image img {
	filter:blur(1.5px) grayscale(75%);
	position:absolute;
	left:50%;
	top:50%;
	height:auto;
	width:110%;
	max-width:150%;
	transform: translate(-50%,-50%);
	}
	</style>
	<div class="post-cover-image">
	<a href="{{url}}" ><img src="{{image}}" height="auto" width="100%"alt="{{title}}"class="post-cover-image" overflow="hidden"/></a>
        </div>
	{{/if}}
	<p>{{excerpt}}&hellip;</p>
    </div>
    <a href="{{url}}" class="button button-default button-keep-reading" title="Read &quot;{{title}}&quot;">Keep reading &rarr;</a>
</article>
{{/foreach}}

{{!! After all the posts, we have the previous/next pagination links }}

{{#if pagination.prev}}
    <hr>
    {{pagination}}
{{else}}
    {{#if pagination.next}}
        <hr>
        {{pagination}}

    {{/if}}
{{/if}}
